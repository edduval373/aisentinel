# Environment Variables for AI Sentinel

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Email Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Application Configuration
APP_URL=https://your-app.vercel.app
NODE_ENV=production

# Session Configuration (auto-generated)
SESSION_SECRET=your_session_secret_here

# Optional: Enable Replit Auth (leave empty to disable)
ENABLE_REPLIT_AUTH=false

# Optional: Replit Auth Configuration (only if ENABLE_REPLIT_AUTH=true)
REPLIT_DOMAINS=your-replit-domain.com
ISSUER_URL=https://replit.com/oidc
REPL_ID=your_repl_id